{
  "permissions": {
    "allow": [
      "WebFetch(domain:notams.aim.faa.gov)",
      "WebFetch(domain:www.faa.gov)",
      "WebFetch(domain:api.faa.gov)",
      "WebFetch(domain:www.autorouter.aero)",
      "WebFetch(domain:adds-faa.opendata.arcgis.com)",
      "WebFetch(domain:ais-faa.opendata.arcgis.com)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "npm run format && npm run lint:fix"
          }
        ]
      }
    ]
  }
}
